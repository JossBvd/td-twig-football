{% extends "base.html.twig" %}

{% block title %}
    <title>TD Twig : Football</title>
{% endblock %}

{% block main %}
    <main class="min-vh-100">
      <table class="table table-striped table-dark m-auto my-5 w-75">
        <thead>
          <tr>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Âge</th>
            <th scope="col">Taille</th>
            <th scope="col">Poids</th>
            <th scope="col">Salaire</th>
            <th scope="col">Date de naisance</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
        {% for key, player in players %}
          <tr>
            <td>{{ player.nom }}</td>
            <td>{{ player.prenom }}</td>
            <td>{{ player.age }} ans</td>
            <td>{{ player.taille }} m</td>
            <td>{{ player.poids }} kg</td>
            <td>{{ player.salaire|number_format(0,","," ") }}€</td>
            <td>{{ player.bday|date("d/m/Y") }}</td>
            <td><button type="button" class="btn btn-light"><a class="link-dark" href="detail.php?id={{key}}">Détail</a></button></td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </main>
{% endblock %}
